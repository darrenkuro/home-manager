{
  "workbench.colorTheme": "GitHub Dark",
  "workbench.iconTheme": "material-icon-theme",

  "editor.fontFamily": "Hack Nerd Font Mono, monospace",
  "editor.fontSize": 14,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": false,
  "editor.suggestOnTriggerCharacters": false,
  "diffEditor.ignoreTrimWhitespace": false,

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.badges": true,
  "explorer.decorations.colors": true,
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.decorations.enabled": true,
  "git.enabled": true,

  "C_Cpp.clang_format_path": "~/.nix-profile/bin/clang-format",
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },

  "nix.enableLanguageServer": true,
  "nix.formatterPath": "~/.nix-profile/bin/alejandra",
  "nix.serverPath": "~/.nix-profile/bin/nil",
  "[nix]": {
    "editor.defaultFormatter": null
  },

  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },

  "rust-analyzer.cargo.autoreload": true,
  "rust-analyzer.check.command": "clippy",
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.procMacro.enable": true,
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },

  "prettier.prettierPath": "~/.nix-profile/bin/prettier",
  "prettier.resolveGlobalModules": false,

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  "material-icon-theme.activeIconPack": "react",
  "material-icon-theme.files.associations": {
    "constants.ts": "tsconfig",
    "playground.ts": "test-ts",
    "svg.tsx": "svgr"
  },
  "material-icon-theme.folders.associations": {
    "commands": "functions",
    "component": "react-components",
    "data-fetching": "Api",
    "data-models": "database",
    "entry-model": "database",
    "experiment": "project",
    "modals": "interface",
    "to-process": "error"
  },
  "material-icon-theme.opacity": 0.8,
  "material-icon-theme.saturation": 0.8,

  "security.workspace.trust.enabled": true,
  "security.workspace.trust.startupPrompt": "never",
  "security.workspace.trust.trustedFolders": [
    "~/Documents/dev",
    "~/.config/home-manager"
  ],
  "extensions.additionalPaths": ["~/.nix-profile/share/vscode/extensions"]
}
